@using JogoWeb.Models
@model List<JogoViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listagem de Jogos</h2>

<a href="/jogo/create">Novo Registro</a>

<table class="table table-responsive">
    <tr>
        <th>Ações</th>
        <th>Cógido</th>
        <th>Nome do jogo</th>
        <th>Data de aquisição</th>
        <th>Valor do Jogo</th>
        <th>Código da categoria</th>
        <th>Categoria do jogo</th>
    </tr>
    @foreach (var jogo in Model)
    {
        <tr>
            <td><a href="/jogo/Edit?id=@jogo.id">Editar</a>
                <a href="javascript:apagarJogo(@jogo.id)">Apagar</a>
            </td>
            <td>@jogo.id</td>
            <td>@jogo.descricao</td>
            <td>@jogo.data_aquisicao.ToShortDateString()</td>
            <td>@jogo.valor_locacao?.ToString("0.00")</td>
            <td>@jogo.categoriaID</td>
            <td>@jogo.NomeCategoria</td>
        </tr>
    }
</table>

<script>
    function apagarJogo(id)
    {
        if (confirm('Confirma a exclusão do registro? '))
            location.href = 'jogo/Delete?id=' + id;
    }
</script>